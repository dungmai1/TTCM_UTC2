<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductDetailActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16sp"
                    android:layout_marginBottom="16sp">

                        <ImageView
                            android:id="@+id/BtnMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boder"
                            app:srcCompat="@drawable/baseline_horizontal_rule_24" />
                        <TextView
                            android:id="@+id/Quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="18sp"
                            android:layout_marginLeft="12sp"
                            android:layout_marginRight="12sp"/>

                        <ImageView
                            android:id="@+id/BtnPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boder"
                            app:srcCompat="@drawable/baseline_add_24" />
                </LinearLayout>
        <TextView
            android:id="@+id/txtProductNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="22sp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16sp"
            />
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/background"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16sp"
            />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="22dp"
                            android:layout_marginLeft="16dp"
                            />

                                <TextView
                                    android:id="@+id/txtDesciption"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="TextView"
                                    android:textSize="18dp"
                                    android:layout_marginLeft="16dp"/>

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Một số hình ảnh khác"
                                    android:textSize="22dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                        <ImageView
                                            android:id="@+id/imgDetail1"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            tools:srcCompat="@tools:sample/avatars" />
                                        <ImageView
                                            android:id="@+id/imgDetail2"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            tools:srcCompat="@tools:sample/avatars" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                        <ImageView
                                            android:id="@+id/imgDetail3"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            tools:srcCompat="@tools:sample/avatars" />
                                        <ImageView
                                            android:id="@+id/imgDetail4"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            tools:srcCompat="@tools:sample/avatars" />
                                </LinearLayout>
                        <Button
                                        android:id="@+id/btnAddToCart"
                                        android:layout_width="311dp"
                                        android:layout_height="48dp"
                                        android:layout_marginTop="16dp"
                                        android:text="Add to Cart"
                                        android:backgroundTint="@color/background"
                                        android:textColor="#fff"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="32dp"
                                        />
                </LinearLayout>
        </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>